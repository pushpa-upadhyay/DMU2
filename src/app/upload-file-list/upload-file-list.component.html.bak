<div>
    <h2>Uploaded Files</h2>
    <form class="date-block" [formGroup]="filterForm">
        <div class="date-block__list">
            <mat-form-field>
                <input matInput [matDatepicker]="fromDate" placeholder="From Date" formControlName="fromDate"
                    [(ngModel)]="fromSelected">
                <mat-datepicker-toggle matSuffix [for]="fromDate"></mat-datepicker-toggle>
                <mat-datepicker #fromDate></mat-datepicker>
            </mat-form-field>
        </div>
        <div class="date-block__list">
            <mat-form-field>
                <input matInput [matDatepicker]="toDate" placeholder="To Date" formControlName="toDate"
                    [(ngModel)]="toSelected">
                <mat-datepicker-toggle matSuffix [for]="toDate"></mat-datepicker-toggle>
                <mat-datepicker #toDate></mat-datepicker>
            </mat-form-field>
        </div>
        <button mat-icon-button (click)="filterByDateRange()">
            <mat-icon><i class="fas fa-filter fa-xs"></i></mat-icon>
        </button>
        <button mat-icon-button (click)="clearFilter()" style="margin-left: -10px;">
            <mat-icon><i class="fas fa-times fa-sm"></i></mat-icon>
        </button>
        <div class="search-data">
            <mat-form-field appearance="outline">
                <mat-label>Search Files</mat-label>
                <input matInput (keyup)="applyFilter($event.target.value)">
                <mat-icon matSuffix style="margin-bottom:10px;"><i class="fas fa-search fa-sm" aria-hidden="true"></i>
                </mat-icon>
            </mat-form-field>
        </div>
    </form>
    <div class="table-container">
        <div class="mat-elevation-z8 data-table">
            <table mat-table matSort [dataSource]="filelistdataSource">

                <!-- File Name Column -->
                <ng-container matColumnDef="fileName">
                    <th mat-header-cell *matHeaderCellDef mat-sort-header> File Name </th>
                    <td mat-cell *matCellDef="let element"> {{element.fileName}} </td>
                </ng-container>

                <!-- Uploaded Date Column -->
                <ng-container matColumnDef="fileDownloadUri">
                    <th mat-header-cell *matHeaderCellDef mat-sort-header> File Location </th>
                    <td mat-cell *matCellDef="let element"> {{element.fileDownloadUri}} </td>
                </ng-container>

                <!-- File Type Column -->
                <ng-container matColumnDef="fileType">
                    <th mat-header-cell *matHeaderCellDef mat-sort-header> File Type </th>
                    <td mat-cell *matCellDef="let element"> {{element.fileType}} </td>
                </ng-container>

                <!-- File Size Column -->
                <ng-container matColumnDef="size">
                    <th mat-header-cell *matHeaderCellDef mat-sort-header> File Size </th>
                    <td mat-cell *matCellDef="let element"> {{element.size}} KB </td>
                </ng-container>
				<ng-container matColumnDef="modified">
                    <th mat-header-cell *matHeaderCellDef mat-sort-header> Modified On </th>
                    <td mat-cell *matCellDef="let element"> {{element.modified}} KB </td>
                </ng-container>

                <!-- File Actions Column -->
                <ng-container matColumnDef="fileAction">
                    <th mat-header-cell *matHeaderCellDef> Actions </th>
                    <td mat-cell *matCellDef="let element">
                        <button mat-icon-button (click)="deleteFile(element)">
                            <mat-icon><i class="far fa-trash-alt fa-xs"></i></mat-icon>
                        </button>
                        <button mat-icon-button (click)="downloadFile()">
                            <mat-icon><i class="fas fa-arrow-alt-circle-down fa-xs"></i></mat-icon>
                        </button>
                    </td>
                </ng-container>

                <tr mat-header-row *matHeaderRowDef="columnsToDisplay; sticky: true"></tr>
                <tr mat-row *matRowDef="let myRowData; columns: columnsToDisplay"></tr>

            </table>
        </div>
    </div>
    <!--Table Paginator-->
    <mat-paginator [pageSize]="10" [pageSizeOptions]="[5, 10, 25,50,75,100]" class="mat-paginator-sticky">
    </mat-paginator>
</div>